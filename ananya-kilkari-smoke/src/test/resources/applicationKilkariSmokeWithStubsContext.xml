<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                               http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:property-placeholder location="classpath*:*.properties"/>

    <import resource="classpath*:applicationKilkariServiceContext.xml" />

    <context:component-scan base-package="org.motechproject.ananya.kilkari"/>

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>

    <bean id="reportingService" class="org.motechproject.ananya.kilkari.reporting.service.StubReportingService"/>

    <bean id="onMobileOBDGateway" class="org.motechproject.ananya.kilkari.obd.gateway.StubOnMobileOBDGateway"/>

    <bean id="onMobileSubscriptionGateway" class="org.motechproject.ananya.kilkari.subscription.service.stub.StubOnMobileSubscriptionGateway"/>

    <bean id="reportingGateway" class="org.motechproject.ananya.kilkari.reporting.gateway.StubReportingGateway"/>

</beans>